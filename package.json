{
  "name": "xeno-shopify-platform",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "ts-node-dev --respawn --transpile-only server/index.ts",
    "dev:client": "next dev -p 3001",
    "dev:worker": "ts-node-dev --respawn --transpile-only server/services/worker.main.ts",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p server/tsconfig.json",
    "build:client": "next build",
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:server": "node dist/server/index.js",
    "start:client": "next start -p 3001",
    "start:worker": "node dist/server/services/worker.main.js",
    "setup": "prisma generate && prisma migrate deploy",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "lint": "next lint",
    "prisma": "prisma",
    "typecheck": "tsc --noEmit",
    "shopify": "shopify",
    "config:link": "shopify app config link",
    "deploy": "shopify app deploy"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@prisma/client": "^5.19.0",
    "@shopify/app-bridge-react": "^4.2.4",
    "@shopify/shopify-api": "^11.0.0",
    "@tanstack/react-query": "^5.51.0",
    "bullmq": "^5.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "morgan": "^1.10.0",
    "next": "14.2.5",
    "pino": "^9.3.0",
    "pino-pretty": "^11.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@sentry/node": "^8.26.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "prisma": "^5.19.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.0"
  },
  "workspaces": {
    "packages": [
      "extensions/*"
    ]
  }
}
